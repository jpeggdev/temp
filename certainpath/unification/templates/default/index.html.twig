{% extends 'base.html.twig' %}

{% block title %}{{ app_config.get('APP_PROPER_NAME') }}{% endblock %}
{% block page_heading %}Welcome to the {{ app_config.get('APP_INFORMAL_NAME') }} Project{% endblock %}

{% block body %}
<div class="bg-indigo-100">
    <div class="mx-auto max-w-7xl px-6 py-20 lg:flex lg:items-center lg:justify-between lg:px-8">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Ready to dive in?<br>Sign in with your Hub company now.</h2>
        <div class="mt-10 mr-32 flex items-center gap-x-6 lg:mt-0 lg:flex-shrink-0">
            <a
                href="{{ path('app_user_home') }}"
                class="rounded-md bg-indigo-600 px-5 py-4 text-lg font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
            >
                Let's get started
            </a>
        </div>
    </div>
</div>

<div class="flex">
    <span class="w-1/3"></span>
    <img
        src="{{ asset('images/cartoon_owl.png') }}"
        class="w-1/3"
        alt=""
    >
</div>

{% endblock %}
