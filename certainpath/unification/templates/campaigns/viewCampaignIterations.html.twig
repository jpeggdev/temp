{% extends 'base.html.twig' %}

{% block title %}{{ campaign.name }}: Iterations {% endblock %}
{% block page_heading %} {{ campaign.name }}: Iterations {% endblock %}

{% block body %}
    {% if campaignIterations|length > 0 %}
        <div class="mt-8 flow-root">
            <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                    <table class="min-w-full divide-y divide-gray-300">
                        <thead>
                        <tr>
                            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Iteration</th>
                            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Status</th>
                            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Start Date</th>
                            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">End Date</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
                        {% for campaignIteration in campaignIterations %}
                                <tr>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ campaignIteration.iterationNumber }}</td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ campaignIteration.campaignIterationStatus.name }}</td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ campaignIteration.startDate|date('m-d-Y') }}</td>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ campaignIteration.endDate|date('m-d-Y') }}</td>
                                    {% if campaignIteration.batches|length > 0 %}
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 text-right">
                                            <a href="{{ path('app_list_campaign_iteration_batches', {
                                                campaignId: campaignIteration.campaign.id,
                                                campaignIterationId: campaignIteration.id,
                                            }) }}" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-rose-600">View Batches
                                            </a>
                                        </td>
                                    {% endif %}
                                </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
